{
  "manifest_version": 2,
  "name": "Report Viewer",
  "description": "Display a filtered cloud-init.log",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click it Baby"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*log"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "cookies",
    "tabs",
    "http://*/*", 
    "https://*/*"
  ]
}