{
  "manifest_version": 2,

  "name": "Getting started",
  "description": "Display a Google Image search result for the current page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click it Baby"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "cookies",
    "tabs",
    "tabs", 
    "<all_urls>",
    "http://*/*", 
    "https://*/*"
  ]
}